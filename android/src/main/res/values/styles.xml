<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>


     <!--Action Bar Tab Style -->
    <style name="VaavudActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:actionBarDivider">@color/darkgray</item>
        <item name="actionBarDivider">@color/darkgray</item>
        <item name="android:background">@drawable/ab_tab_indicator</item>
        <item name="background">@drawable/ab_tab_indicator</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>

        <!--<item name="windowActionBar">false</item>-->
        <item name="android:windowBackground">@color/lightgray</item>
        <item name="actionBarStyle">@style/VaavudActionBar</item>
        <item name="actionBarTabStyle">@style/VaavudActionBarStyle</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>

        <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/midgray</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/darkgray</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue_pressed</item>
    </style>

    <style name="WindMarker.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- Action Bar Style -->
    <style name="VaavudActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="logo">@drawable/logo</item>
        <item name="android:background">@color/midgray</item>
        <item name="background">@color/midgray</item>
        <!--<item name="android:backgroundSplit">@color/darkgray</item>-->
        <!--<item name="backgroundSplit">@color/darkgray</item>-->

        <!--<item name="android:backgroundStacked">@drawable/ab_stacked_solid</item>-->
        <!--<item name="backgroundStacked">@drawable/ab_stacked_solid</item>-->
    </style>


</resources>


