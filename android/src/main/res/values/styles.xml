<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>




    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightgray</item>

        <item name="actionBarStyle">@style/VaavudActionBarStyle</item>
        <item name="actionBarTabStyle">@style/VaavudActionBarTabStyle</item>
        <item name="actionBarItemBackground">@drawable/ab_selectable_background</item>

        <item name="android:actionModeBackground">@color/blue</item>
        <item name="actionModeBackground">@color/blue</item>

        <item name="dropDownListViewStyle">@style/VaavudListViewDropDown</item>
        <item name="popupMenuStyle">@style/VaavudPopupMenu</item>
        <!--<item name="actionDropDownStyle">@style/Widget.Styled.Spinner.DropDown.ActionBar</item>-->
        <!--<item name="dropDownListViewStyle">@style/Widget.Styled.ListView.DropDown</item>-->
        <!--<item name="popupMenuStyle">@style/Widget.Styled.PopupMenu</item>-->


        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>


        <!-- COLORS-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/blue</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/com_facebook_blue</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <!--<item name="colorAccent">@color/blue</item>-->
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue</item>
    </style>

    <style name="WindMarker.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- DropDown Menu Style -->
    <style name="VaavudListViewDropDown"
           parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/ab_selectable_background</item>
    </style>
    <!-- Popup Menu Style -->

    <style name="VaavudPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <!-- Action Bar Style -->
    <style name="VaavudActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showCustom</item>
        <item name="logo">@drawable/logo</item>
        <item name="android:background">@color/blue</item>
        <item name="background">@color/blue</item>
        <item name="android:titleTextStyle">@style/VaavudActionBarTitleTextStyle</item>
        <!--<item name="android:textColor">#ffffffff</item>-->
    </style>

    <!--Action Bar Tab Style -->
    <style name="VaavudActionBarTitleTextStyle" parent="android:TextAppearance">
        <!--<item name="android:textColor">#ffffffff</item>-->
    </style>
    <style name="VaavudActionBarTabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:actionBarDivider">@color/blue</item>
        <item name="actionBarDivider">@color/blue</item>
        <item name="android:background">@drawable/ab_tab_indicator</item>
        <item name="background">@drawable/ab_tab_indicator</item>
    </style>


</resources>


