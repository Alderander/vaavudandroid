<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/lightgray</item>

        <item name="actionBarStyle">@style/VaavudActionBarStyle</item>
        <item name="actionBarTabStyle">@style/VaavudActionBarTabStyle</item>
        <item name="actionBarItemBackground">@drawable/ab_selectable_background</item>
        <item name="android:actionBarTabTextStyle">@style/VaavudActionBarTabTextColor</item>
        <item name="actionBarTabTextStyle">@style/VaavudActionBarTabTextColor</item>
        <item name="android:actionModeBackground">@color/vaavudgray_20</item>
        <item name="actionModeBackground">@color/vaavudgray_20</item>
        <item name="android:actionOverflowButtonStyle">@style/VaavudActionOverflowButtonStyle</item>
        <item name="actionOverflowButtonStyle">@style/VaavudActionOverflowButtonStyle</item>
        <item name="android:actionMenuTextColor">@color/vaavudgray</item>
        <item name="actionMenuTextColor">@color/vaavudgray</item>

        <item name="dropDownListViewStyle">@style/VaavudListViewDropDown</item>
        <item name="popupMenuStyle">@style/VaavudPopupMenu</item>

        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black</item>
        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_black</item>
        <item name="circularProgressBarStyle">@style/CircularProgressBar</item>


        <!-- COLORS-->
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/vaavudgray_20</item>
        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/vaavudgray</item>
        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/blue_pressed</item>
    </style>

    <style name="WindMarker.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="VaavudActionOverflowButtonStyle" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more_black</item>
    </style>
    <!-- DropDown Menu Style -->

    <style name="VaavudListViewDropDown"
           parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <!--<item name="android:listSelector">@drawable/ab_selectable_background</item>-->
    </style>
    <!-- Popup Menu Style -->

    <style name="VaavudPopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <!-- Action Bar Style -->
    <style name="VaavudActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="logo">@drawable/logo</item>
        <item name="android:background">@color/vaavudgray_20</item>
        <item name="background">@color/vaavudgray_20</item>
        <item name="android:titleTextStyle">@style/VaavudActionBarTitleTextColor</item>
        <item name="titleTextStyle">@style/VaavudActionBarTitleTextColor</item>
    </style>

    <!--Action Bar Tab Style -->
    <style name="VaavudActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:actionBarDivider">@color/vaavudgray_20</item>
        <item name="actionBarDivider">@color/vaavudgray_20</item>
        <item name="android:background">@drawable/ab_tab_indicator</item>
        <item name="background">@drawable/ab_tab_indicator</item>
    </style>

    <style name="VaavudActionBarTabTextColor" parent="@style/Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="VaavudActionBarTitleTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue</item>
    </style>


</resources>


