<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/history_day_splitter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/vaavudgray_20">
    <TextView
        android:id="@+id/history_monthText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:text="Month"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/history_dayText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/history_monthText"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:orientation="vertical"
        android:text="Day"
        android:textSize="16dp" />
    
</RelativeLayout><!-- From: file:/home/dgalindo/vaavudandroid/android/src/main/res/layout/splitter_day_history.xml -->