<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="1">

        <EditText
            android:id="@+id/fbEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:padding="5dp"
            android:background="@color/white"
            android:gravity="top|left"
            android:hint="What's it like?"
            android:minHeight="120dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/lightgray"
            android:orientation="horizontal">

			<RelativeLayout
			    android:id="@+id/fbImageViewLayout"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="0.9"
			    android:layout_alignParentLeft="true"
			    android:orientation="horizontal"
			    android:paddingLeft="20dp"
			    android:paddingRight="20dp" >

			<ImageView
			    android:id="@+id/fbImageViewRight"
			    android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:background="@color/midgray"
			    android:padding="1dp"/>

			<ImageView
			    android:id="@+id/fbImageViewCenter"
			    android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_alignParentTop="true"
			    android:layout_centerHorizontal="true"
			    android:background="@color/midgray"
			    android:padding="1dp"/>

			<ImageView
			    android:id="@+id/fbImageViewLeft"
			    android:layout_width="60dp"
			    android:layout_height="60dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:background="@color/midgray"
			    android:padding="1dp"/>

			</RelativeLayout>

			<ImageButton
			    android:id="@+id/fbImageButton"
			    android:layout_width="40dp"
			    android:layout_height="60dp"
			    android:layout_weight="0.1"
			    android:background="@drawable/button_rounded_gray"
			    android:src="@android:drawable/ic_menu_camera" />

        </LinearLayout>

    </LinearLayout><!-- From: file:/home/dgalindo/vaavudandroid/android/src/main/res/layout/dialog_facebook.xml -->